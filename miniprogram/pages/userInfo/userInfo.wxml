<bgCanvas></bgCanvas>
<view class="container">
    <view class="header">
        <text>个人中心</text>
        <cover-image class="imgIcon" src="https://yanglq.xyz/images/plantIcon/duorouduocai.png"></cover-image>
    </view>
    <view class="flex padding justify-center">
        <view class="cu-avatar xxl round" style="background-image:url({{userInfo.avatarUrl}});"></view>
    </view>
    <view class="cu-list menu sm-border card-menu margin-top">
        <view class="cu-item arrow">
            <view>
                <image class="cu-avatar round" src="https://yanglq.xyz/images/plantIcon/duorou18.png" mode='widthFix'></image>
                <text style="margin-left:10rpx;">昵称</text>
            </view>
            <view>
                {{userInfo.nickName}}
            </view>
        </view>
        <view class="cu-item arrow">
            <view>
                <image class="cu-avatar round" src="https://yanglq.xyz/images/plantIcon/duorou19.png" mode='widthFix'></image>
                <text style="margin-left:10rpx;">性别</text>
            </view>
            <view wx:if="{{userInfo.gender === 0}}">
                未知
            </view>
            <view wx:if="{{userInfo.gender === 1}}">
                男
            </view>
            <view wx:if="{{userInfo.gender === 2}}">
                女
            </view>
        </view>
        <view class="cu-item arrow">
            <view>
                <image class="cu-avatar round" src="https://yanglq.xyz/images/plantIcon/duorou20.png" mode='widthFix'></image>
                <text style="margin-left:10rpx;">多肉数量</text>
            </view>
            <view value="{{duorouNum}}" range="{{number}}">
                <view class="picker">
                    {{duorouNum}}
                </view>
            </view>
        </view>
        <view class="cu-item arrow">
            <view>
                <image class="cu-avatar round" src="https://yanglq.xyz/images/plantIcon/duorou20.png" mode='widthFix'></image>
                <text style="margin-left:10rpx;">日记本数</text>
            </view>
            <view value="{{diaryNum}}" range="{{number}}">
                <view class="picker">
                    {{diaryNum}}
                </view>
            </view>
        </view>
        <view class="cu-item arrow"
            bindtap="show"
        >
            <view>
                <image class="cu-avatar round" src="https://yanglq.xyz/images/plantIcon/duorou20.png" mode='widthFix'></image>
                <text style="margin-left:10rpx;">联系我们</text>
            </view>
        </view>
    </view>
</view>
