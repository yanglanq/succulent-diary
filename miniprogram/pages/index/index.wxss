/**index.wxss**/
.header{
  padding: 15rpx;
  padding-top: 50rpx;
  background-color: rgba(153, 191, 76, 0.871);
  width: 100%;
  height: 130rpx;
  font-size: 41rpx;
  line-height: 85rpx;
  color: aliceblue;
}

.search{
  margin: 30rpx auto 0rpx;
  height: 70rpx;
  width: 90%;
  border-radius: 70rpx;
  border:1px solid #aaa;
  text-align: center;
  line-height: 70rpx;
  background-color: rgba(255, 255, 255, 0.604);
  color: #aaa;
}
.writeDiary{
  margin: auto;
  width: 90%;
  height: 70rpx;
  line-height: 40rpx;
  background-color: rgba(255, 255, 255, 0.604);
  border-radius: 15rpx;
  padding: 15rpx 25rpx;
  letter-spacing: 5rpx;
}
.msg{
  box-sizing: border-box;
  margin: 30rpx auto;
  padding: 25rpx;
  width: 90%;
  height: 50%;
  background-color: rgba(255, 255, 255, 0.611);
  border-radius: 15rpx;
}
.msg .title{
  margin: 5rpx 0 20rpx;
  font-size: 35rpx;
}
.msg .content{
  word-wrap: break-word;
  line-height: 1.5em;
  background: linear-gradient(to right, rgb(153, 191, 76), rgb(116, 150, 14), rgb(153, 191, 76));
  -webkit-background-clip: text;
  color: transparent;
}

.watering .title{
  display: block;
  color: rgb(161, 191, 27);
  font-weight: bold;
  margin:10px 0;
  font-size: 16px;
}

.resultCard{
  padding: 20rpx;
  width: 90%;
  margin: 10px auto;
  background-color: rgba(255, 255, 255, 0.604);
  cursor: pointer;
}
.resultCard .top{
  margin-bottom: 10px;
  height: 100rpx;
}
.resultCard .top image{
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border:1px solid #aaa;
}
.resultCard .top .right{
  float: left;
  height: 100%;
  padding: 2px;
  width: 80%;
  margin-left: 10px;
}
.resultCard .top .right .name{
  background: linear-gradient(to right, rgb(127, 158, 63), rgb(116, 150, 14), rgb(94, 118, 46));
  -webkit-background-clip: text;
  color: transparent;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
  width: 510rpx;
}
.resultCard .top .right .alias{
  color: rgb(150, 184, 81);
  width: 510rpx;
}
.resultCard .info{
  color: #666;
  /* display: inline-block;  */
  width: 95%;
  margin: 0rpx 10rpx;
  display: -webkit-box ;
  overflow: hidden; /*隐藏溢出的文本  */
  text-overflow: ellipsis;
  word-break: break-all;/*自动换行*/
  -moz-box-orient: vertical; /*从上到下自动排列子元素*/
  -webkit-box-orient: vertical; 
  -webkit-line-clamp:3; /*显示的行数*/
}
