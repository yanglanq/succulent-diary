/* pages/loader/loader.wxss */
page{
    background-color: #fff;
}
.loader {
    margin: 200px auto;
    font-size: 20px;
    width: 1em;
    height: 1em;
    border-radius: 50%;
    position: relative;
    text-indent: -9999em;
    animation: load-effect 1s infinite linear;
 }
 @keyframes load-effect {
    0% {
        box-shadow: -3em 2em 0 .5em #4ea980, 0 2em 0 0 #4ea980, 3em 2em 0 -.5em #4ea980;
    }
    25% {
        box-shadow: -3em 2em 0 0 #4ea980, 0 2em 0 -.5em #4ea980, 3em 2em 0 0 #4ea980;
     }
     50% {
        box-shadow: -3em 2em 0 -0.5em #4ea980, 0 2em 0 0 #4ea980, 3em 2em 0 .5em #4ea980;
     }
     75% {
        box-shadow: -3em 2em 0 0 #4ea980, 0 2em 0 .5em #4ea980, 3em 2em 0 0 #4ea980;
     }
     100% {
        box-shadow: -3em 2em 0 .5em #4ea980, 0 2em 0 0 #4ea980, 3em 2em 0 -.5em #4ea980;
     }
  }