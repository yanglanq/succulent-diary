
<form>
    <bgCanvas></bgCanvas>
    <backup bgColor="" isCustom="{{false}}" isBack="{{true}}">
        <view slot="content">日记</view>
    </backup>
    <!-- 标题 -->
    <view class="cu-form-group" style="background-color: #d9e895;">
        <view style="font-size: 30rpx;" class="title">
            <image class="img" src="https://yanglq.xyz/images/plantIcon/duorou16.png" mode='widthFix'></image>
            标题
        </view>
        <input style="font-size: 30rpx;" placeholder="在这里输入标题，最多30个字符" maxlength="30" bindchange="textInput"></input>
    </view>
    <!-- 正文 -->
    <view class="cu-form-group textarea">
        <textarea style="height: 600rpx;font-size: 30rpx;" maxlength="-1" bindinput="textareaInput" placeholder="美好的一天，写点东西吧^o^"></textarea>
    </view>
    <!-- 图片 -->
    <view class="cu-bar bg-white margin-top">
        <view class="action" style="font-size: 30rpx;">
            <image class="img" src="https://yanglq.xyz/images/plantIcon/duorou18.png" mode='widthFix'></image>
            上传图片
        </view>
        <view class="action">
            {{diary.imgList.length}}/8
        </view>
    </view>
    <view class="cu-form-group">
        <view class="grid col-4 grid-square flex-sub">
            <view class="bg-img" wx:for="{{diary.imgList}}" wx:for-item="item" wx:key="*this" bindtap="ViewImage">
                <image src="{{item}}" data-index="{{index}}" mode='aspectFill'></image>
                <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
                    <text class="cuIcon-close"></text>
                </view>
            </view>
            <view style="border-radius:10%;" class="solids" bindtap="ChooseImage" wx:if="{{diary.imgList.length<8}}">
                <text class="cuIcon-cameraadd"></text>
            </view>
        </view>
    </view>
    <!-- 提交 -->
    <view class="bottom" bindtap="diarySubmit"
        style="border: 1px solid #eee;"
    >
        <text class="cuIcon-check"> 提交</text>
    </view>
</form>
