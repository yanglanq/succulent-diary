/* components/card/card.wxss */
.card{
  position: relative;
  width: 100%;
  height: 100%;
}
.card image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.text{
  position: absolute;
  bottom: 0;
  padding: 0 15rpx;
  box-sizing: border-box;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
}